div(data-ng-controller="GameController as gameCtrl")

    include board

    include menu

    #game-dialog.ng-cloak.dialog(
        data-ng-cloak
        data-ng-if="gameCtrl.game.status.isComplete()"
        data-ng-style="{ 'margin-top': (gameCtrl.displayManager.boardTopOffset - 30) }"
        data-moveable)
        h3 Game over!
        span {{gameCtrl.game.status.getCurrentTeamName()}} won!
        div.button-container 
            a(
                href=""
                data-ng-click="gameCtrl.startGame()"
                data-moveable-ignore) new game &raquo;
            
    #screen-block.ng-cloak(
        data-ng-if="!gameCtrl.game.status.isActive()")