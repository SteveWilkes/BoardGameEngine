@require "/public/stylesheets/common"

body
	margin 0
	padding 0
	font normal 11pt Segoe UI, Calibri, sans-serif

.hidden
	visibility hidden

.max-size
	width 100%
	height 100%

.light-tile
	background-color white

.dark-tile
	background-color #2D6292

div#board
	min-width 300px
	overflow hidden
	margin 0 auto
	-webkit-transform perspective(500px) rotateX(20deg)
	-moz-transform perspective(500px) rotateX(20deg)
	-ms-transform perspective(500px) rotateX(20deg)
	-o-transform perspective(500px) rotateX(20deg)
	transform perspective(500px) rotateX(20deg)

div.board-tile
	float left
	margin auto

div.placeholder
	border white

div.available
	position relative
	border $tile-border-color

div.board-destination-tile
	border #8CBF26

div.board-target-tile
	border $tile-attack-border-color

div.board-movement-tile
	border #F09609

img.piece
	position absolute
	top 50%
	left 50%
	margin -40% 0 0 -25%
	z-index 1

img.attachedPiece
	position absolute
	z-index 2
	top 50%
	left 50%
	margin -30% 0 0 -5%

div#game-menu
	position absolute
	z-index 5
	top 0
	left 0
	width 20em
	background-color #3A3145
	color white
	
	h3
		font bold 13pt Segoe UI Light, Calibri, sans-serif
		margin-top .3em

	#menu-button
		background-color #3A3145
		border-color #3A3145
		margin: .1em .3em .1em 0

	ul li a i
		margin-right .1em

div.dialog
	position absolute
	left 50%
	top 50%
	z-index 10
	margin-left -13em
	padding 0
	width 26em
	height 6em
	border #3A3145
	background-color white

	h3
		font bold 13pt Segoe UI Light, Calibri, sans-serif
		margin 0 0 .1em 0
		padding 0 0 .2em .3em
		color white
		background-color #3A3145

	span
		text-align center
		vertical-align middle
		padding .3em .5em

	div.button-container
		position absolute
		bottom 0
		right 0
		padding .2em .4em
		

div#screen-block
	position absolute
	left 0
	top 0
	width 100%
	height 100%
	z-index 9
	background-color black
	filter alpha\(opacity=30\)
	-moz-opacity .5
	-khtml-opacity .5
	opacity .3
	
.nav, .pagination, .carousel, .panel-title a { cursor: pointer; }