border(colour)
	border 2px solid colour

body
	margin 0
	padding 0
	font normal 13pt Segoe UI, Calibri, sans-serif

.hidden
	visibility hidden

.max-size
	width 100%
	height 100%

.light-tile
	background-color white

.dark-tile
	background-color #2D6292

div#board
	min-width 300px
	overflow hidden
	margin 0 auto
	transform perspective(500px) rotateX(20deg)

div.board-tile
	float left
	margin auto

div.placeholder
	border white

div.available
	position relative
	border #ddd

div.board-destination-tile
	border #8CBF26

img.piece
	position absolute
	top 50%
	left 50%
	margin -40% 0 0 -25%
	z-index 1

img.attachedPiece
	position absolute
	z-index 2
	top 50%
	left 50%
	margin -30% 0 0 -5%

div#game-status
	position absolute
	z-index 5
	top 0
	right 0
	width 25%

.heading-bar
	background-color #3A3145
	padding .4em .5em

	h3
		margin 0
		color white
		font bold 18pt Segoe UI Light, Calibri, sans-serif