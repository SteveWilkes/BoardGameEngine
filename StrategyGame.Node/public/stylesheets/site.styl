border(colour)
	border 2px solid colour

body
	margin 0
	padding 0
	font normal 12pt Segoe UI, Calibri, sans-serif

.hidden
	visibility hidden

.max-size
	width 100%
	height 100%

.light-tile
	background-color white

.dark-tile
	background-color #2D6292

div#board
	min-width 300px
	overflow hidden
	margin 0 auto
	-webkit-transform perspective(500px) rotateX(20deg)
	-moz-transform perspective(500px) rotateX(20deg)
	-ms-transform perspective(500px) rotateX(20deg)
	-o-transform perspective(500px) rotateX(20deg)
	transform perspective(500px) rotateX(20deg)

div.board-tile
	float left
	margin auto

div.placeholder
	border white

div.available
	position relative
	border #ddd

div.board-destination-tile
	border #8CBF26

div.board-target-tile
	border #E51400

img.piece
	position absolute
	top 50%
	left 50%
	margin -40% 0 0 -25%
	z-index 1

img.attachedPiece
	position absolute
	z-index 2
	top 50%
	left 50%
	margin -30% 0 0 -5%

div#game-status
	position absolute
	z-index 5
	top 0
	right 0
	width 25%
	color white

	.heading, .body
		background-color #3A3145
		padding .4em .5em

		h3, h4
			margin 0 0 0 .1em
			font bold 18pt Segoe UI Light, Calibri, sans-serif

		h4
			font bold 15pt Segoe UI Light, Calibri, sans-serif
			margin 0 0 .2em .3em

	.body
		background-color #4E4658
		padding .4em 0 .8em .5em
		
		.body-content
			padding .2em 0
			height 10em
			overflow auto

			.history
				div
					padding 0 .2em .2em .3em
					overflow auto

					span
						float left

					span.history-item-number
						width 1.8em
						text-align right
						margin-right .2em

					span.no-moves
						font-size 90%
						margin-left .5em